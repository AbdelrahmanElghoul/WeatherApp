<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfcd5">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:id="@+id/imgTemp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Condition"
            android:gravity="center"
            android:layout_below="@id/imgTemp"
            android:layout_toEndOf="@id/DataFieldsList"
            android:layout_alignParentRight="true"

            android:id="@+id/txtCondition"
/>
<TextView
    android:layout_width="wrap_content"
    android:maxLines="2"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_toRightOf="@id/imgTemp"
    android:id="@+id/txtLocation"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:text="Region , Country"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/txtDate"
            android:layout_marginStart="5dp"
            android:text="yyyy-mm-dd"
            android:layout_below="@id/txtLocation"

    />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@id/txtDate"
            android:divider="@null"
            android:scrollbars="vertical"
            android:dividerHeight="0dp"
            android:layout_marginTop="10dp"
            android:id="@+id/DataFieldsList"
            android:layout_toLeftOf="@id/imgTemp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>