<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/ChildLayoutBackground">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:id="@+id/imgTemp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:text="Condition"
            android:layout_margin="2dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toEndOf="@id/imgTemp"
            android:foregroundGravity="center"
            android:id="@+id/txtCondition"
/>
        <!--<TextView
    android:layout_width="wrap_content"
    android:maxLines="2"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_toRightOf="@id/imgTemp"
    android:id="@+id/txtLocation"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:text="Region , Country"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:id="@+id/txtDate"
            android:layout_marginEnd="2dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:text="yyyy-mm-dd"

    />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/txtDate"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toEndOf="@id/txtCondition"
            android:hint="00  | 00"
            android:id="@+id/txtWeather"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>